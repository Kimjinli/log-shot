{
  "name": "log-shot",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "db:reset": "rm -f data/sqlite.db* && npm run db:migrate && npm run db:seed",
    "dev:local": "next dev",
    "dev:vercel": "NODE_ENV=production next dev",
    "db:generate:local": "drizzle-kit generate --config=drizzle.config.local.ts",
    "db:generate:vercel": "drizzle-kit generate --config=drizzle.config.vercel.ts",
    "db:migrate:local": "tsx src/db/migrate.ts",
    "db:migrate:vercel": "DATABASE_URL=$DATABASE_URL tsx src/db/migrate.ts",
    "db:studio:local": "drizzle-kit studio --config=drizzle.config.local.ts",
    "db:studio:vercel": "drizzle-kit studio --config=drizzle.config.vercel.ts",
    "db:reset:local": "rm -f data/sqlite.db* && npm run db:migrate:local && npm run db:seed",
    "build:web": "next build",
    "start:web": "next start",
    "deploy:vercel": "vercel --prod",
    "start:electron": "next start",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:postbuild": "node electron-postbuild.js",
    "electron:build": "npm run build:web && npm run electron:postbuild && electron-builder",
    "electron:build:win": "npm run build:web && npm run electron:postbuild && electron-builder --win",
    "electron:build:mac": "npm run build:web && npm run electron:postbuild && electron-builder --mac",
    "electron:build:linux": "npm run build:web && npm run electron:postbuild && electron-builder --linux",
    "deploy:electron": "npm run electron:build"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@tanstack/query-sync-storage-persister": "^5.90.22",
    "@tanstack/react-query": "^5.51.0",
    "@tanstack/react-query-persist-client": "^5.51.0",
    "@types/archiver": "^7.0.0",
    "archiver": "^7.0.1",
    "better-sqlite3": "^12.6.2",
    "browser-image-compression": "^2.0.2",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.45.1",
    "exif-js": "^2.3.0",
    "idb": "^8.0.0",
    "next": "^14.2.0",
    "postgres": "^3.4.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.52.0",
    "sass": "^1.77.0",
    "sharp": "^0.34.5",
    "zod": "^3.23.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^9.1.0",
    "drizzle-kit": "^0.31.9",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "fs-extra": "^11.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.5.0",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.logshot.app",
    "productName": "Log-Shot",
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "asar": true,
    "files": [
      "**/*",
      "!node_modules",
      ".next/standalone/**/*",
      ".next/static/**/*",
      "public/**/*",
      "main.js"
    ],
    "asarUnpack": [
      ".next/standalone/**/*",
      ".next/static/**/*",
      "public/**/*",
      "data/**/*"
    ],
    "directories": {
      "output": "dist-electron"
    },
    "win": {
      "target": "nsis"
    }
  }
}
